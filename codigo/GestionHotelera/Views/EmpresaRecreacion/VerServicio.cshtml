@{
    ViewData["Title"] = "Detalle del Servicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GestionHotelera.Models.VistasModel.VerDetallesServicioRecreacionViewModel;

<div style="font-family: 'Segoe UI', sans-serif; padding: 20px; background-color: #2c2c2c; color: white;">
    <!-- Boton volver -->
    @if (Model.TipoCuenta == "Empresa")
    {
        <a href="/EmpresaRecreacion/Menu?idEmpresa=no" style="text-decoration: none; color: white; font-size: 16px; display: inline-block; margin-bottom: 10px;">← Atrás</a>

    } else
    {
        <a href="/Cliente/Menu" style="text-decoration: none; color: white; font-size: 16px; display: inline-block; margin-bottom: 10px;">← Atrás</a>
        
    }
    <!-- Encabezado -->
    <div style="background-color: #4d4d4d; padding: 15px; border-radius: 8px; margin-bottom: 10px;">
        <h2 style="margin: 0;">@Model.DatosServicio.NombreServicio</h2>
        <span style="color: #00ffcc;">SERVICIOS</span>
    </div>

    <!-- Botones de accion -->
    @if (Model.TipoCuenta == "Empresa")
    {
        <div style="background-color: #3b3b3b; padding: 10px 15px; border-radius: 8px; display: flex; gap: 10px; margin-bottom: 20px;">
            <a href="#" style="background-color: #27ae60; color: white; padding: 8px 16px; border-radius: 5px; text-decoration: none;">• Editar Servicio</a>
            <a href="#" style="background-color: #c0392b; color: white; padding: 8px 16px; border-radius: 5px; text-decoration: none;">• Eliminar Servicio</a>
        </div>
    }



    <!-- Información del servicio -->
    <div style="display: flex; flex-wrap: wrap; gap: 20px; margin-bottom: 30px;">
        <div style="flex: 1; min-width: 250px;">
            <div style="background-color: #3a3a3a; padding: 15px; border-radius: 5px; margin-bottom: 10px;">
                <p><strong>📧</strong>@Model.DatosEmpresa.CorreoElectronico  </p>
            </div>
            <div style="background-color: #3a3a3a; padding: 15px; border-radius: 5px; margin-bottom: 10px;">
                <p><strong>📍</strong> @Model.DatosServicio.NombreProvincia, @Model.DatosServicio.NombreCanton, @Model.DatosServicio.NombreDistrito</p>
            </div>
        </div>
        <div style="flex: 1; min-width: 250px;">
            <div style="background-color: #3a3a3a; padding: 15px; border-radius: 5px; margin-bottom: 10px;">
                <p><strong>📞</strong> +506 @Model.DatosEmpresa.Telefono</p>
            </div>
            <div style="background-color: #3a3a3a; padding: 15px; border-radius: 5px;">
                <p><strong>👤</strong> Contacto: @Model.DatosEmpresa.PersonaAContactar</p>
            </div>
        </div>
    </div>

    <!-- Precio -->
    <div style="background-color: #3a3a3a; padding: 20px; border-radius: 5px; text-align: center; margin-bottom: 30px;">
        <h3 style="margin: 0;">Precios: </h3>
        <div style="margin-top: 10px; font-size: 20px;">
            <strong>@Model.DatosServicio.Precio Colones</strong><br />
            <span style="font-size: 14px;">por persona</span>
        </div>
    </div>

    <!-- Actividades -->
    <div style="background-color: #3a3a3a; padding: 20px; border-radius: 5px;">
        <h3 style="margin-top: 0;">Actividades</h3>
        @* <div style="background-color: #222; padding: 15px; border-radius: 5px; color: white; max-width: 350px;">
            <strong>Viaje en kayak</strong>
            <p style="margin-top: 5px;">Experimenta la adrenalina de recorrer el río.</p>
        </div> *@

        @foreach (var actividad in Model.DatosServicio.ListaActividades)
        {
            <div style="background-color: #333; color: white; padding: 15px; border-radius: 5px; width: 300px;">
                <strong style="font-size: 18px;">@actividad.NombreActividad</strong>
                <p style="margin-top: 5px;">@actividad.DescripcionActividad</p>
            </div>
        }

    </div>

    @if (Model.TipoCuenta == "Cliente")
    {        
        <button type="button" onclick="location.href='@Url.Action("Menu", "EmpresaRecreacion", new { idEmpresa = Model.DatosServicio.CedulaJuridica })'" style="border-radius:10px; background-color: green; margin: 10px;">Ver empresa de recreacion</button>

    }
   


</div>
