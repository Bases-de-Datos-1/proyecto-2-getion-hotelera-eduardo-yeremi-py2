@{
    ViewData["Title"] = "Registrar Nuevo Servicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GestionHotelera.Models.VistasModel.RegistrarServicioViewModel;

<div style="background-color: aliceblue; padding: 30px; font-family: 'Segoe UI', sans-serif; max-width: 1000px; margin: auto; border-radius: 12px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
    <h2 style="background-color: aquamarine; padding: 10px; border-radius: 8px; text-align: center; font-size: 24px;">Registre Nuevos Servicios</h2>
    

    <form id="registrarNuevoServicioId">


        <div style="background-color: lightyellow; padding: 20px; border-radius: 8px; margin-top: 20px;">
            <label for="nombre" style="display: block; font-weight: bold; margin-bottom: 5px;">Nombre del servicio:</label>
            <input id="nombre" name="NombreServicio" required type="text" style="width: 100%; padding: 10px; border-radius: 6px; border: 1px solid #ccc;">

            <label for="precio" style="display: block; font-weight: bold; margin-top: 20px; margin-bottom: 5px;">Precio (USD):</label>
            <input id="precio" name="Precio" required type="number" style="width: 200px; padding: 10px; border-radius: 6px; border: 1px solid #ccc;">
        </div>

        <div style="background-color: lightyellow; padding: 20px; border-radius: 8px; margin-top: 30px;">
            <h3 style="margin-bottom: 15px;">Seleccione actividades relacionadas:</h3>

            @* <div class="actividad" onclick="toggleCheck('act1')">
                <input type="checkbox" id="act1" style="margin-right: 10px;">
                <label for="act1"><strong>Observación de fauna</strong></label>
                <p>Recorrido guiado por el parque nacional para observar diferentes animales.</p>
            </div>

            <div class="actividad" onclick="toggleCheck('act2')">
                <input type="checkbox" id="act2" style="margin-right: 10px;">
                <label for="act2"><strong>Clases de surf</strong></label>
                <p>Aprende a surfear con instructores profesionales en las mejores playas de la zona.</p>
            </div> *@
            @foreach(var actividad in Model.ListaActividades)
            {
                <div class="actividad" >
                    <input type="checkbox" name="ListasActividades" id="listasActividadesSelectID" value="@actividad.IdActividad" style="margin-right: 10px;">
                    <label for="act2"><strong>@actividad.NombreActividad</strong></label>
                    <p>@actividad.DescripcionActividad</p>
                </div>

              @*   <label style="background-color: #1abc9c; color: white; padding: 8px 14px; border-radius: 6px; cursor: pointer;">
                    <input type="checkbox" name="ListaComodidades" value="@actividad.IdActividad" style="margin-right: 5px;" /> @actividad.NombreActividad
                </label> *@

            }


        </div>

        <div style="margin-top: 30px; display: flex; gap: 20px;">
            <button type="submit" style="padding: 12px 25px; background-color: #388e3c; color: white; font-weight: bold; border: none; border-radius: 6px;">Guardar</button>
            <a href="/EmpresaHospedaje/Menu?idEmpresa=no" style="padding: 12px 25px; background-color: #c62828; color: white; font-weight: bold; border: none; border-radius: 6px; text-decoration: none;">Cancelar</a>
        </div>
    
    
    </form>


</div>

<style>
    .actividad {
        background-color: #e0f7fa;
        padding: 12px;
        border-radius: 6px;
        margin-bottom: 12px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .actividad:hover {
            background-color: #b2ebf2;
        }

        .actividad.checked {
            background-color: #00bcd4;
            color: white;
        }

        .actividad input[type="checkbox"] {
            transform: scale(1.2);
            cursor: pointer;
        }
</style>

