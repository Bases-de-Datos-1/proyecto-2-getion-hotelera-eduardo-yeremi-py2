@{
    ViewData["Title"] = "Editar Perfil - Empresa Recreación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="max-width: 900px; margin: auto; background-color: #e7f0ee; padding: 30px; border-radius: 12px; font-family: 'Segoe UI', sans-serif;">
    <!-- Botón regresar -->
    <a href="/EmpresaRecreacion/Menu" style="text-decoration: none; color: #333; font-weight: bold; display: inline-block; margin-bottom: 20px;">← Atrás</a>

    <h2 style="text-align: center; margin-bottom: 25px; color: #1e4d4d;">Modificar registros para una empresa de recreación</h2>

    <!-- Sección general -->
    <fieldset style="border: none; background-color: #d0e3df; padding: 20px; border-radius: 10px; margin-bottom: 30px;">
        <legend style="font-weight: bold; color: #1e4d4d; font-size: 16px;">Complete los datos de su empresa para comenzar</legend>

        <div style="display: flex; gap: 15px; margin-top: 15px;">
            <div style="flex: 1;">
                <label>Nombre de la empresa:</label>
                <input type="text" class="form-control" placeholder="Nombre" />
            </div>
            <div style="flex: 1;">
                <label>Cédula Jurídica:</label>
                <input type="text" class="form-control" placeholder="Cédula" />
            </div>
        </div>

        <div style="display: flex; gap: 15px; margin-top: 15px;">
            <div style="flex: 1;">
                <label>Correo Electrónico:</label>
                <input type="email" class="form-control" placeholder="ejemplo@email.com" />
            </div>
            <div style="flex: 1;">
                <label>Teléfono:</label>
                <input type="tel" class="form-control" placeholder="+506 8888-8888" />
            </div>
        </div>

        <div style="margin-top: 15px;">
            <label>Persona de contacto:</label>
            <input type="text" class="form-control" placeholder="Nombre completo" />
        </div>
    </fieldset>

    <!-- Sección dirección -->
    <fieldset style="border: none; background-color: #d0e3df; padding: 20px; border-radius: 10px;">
        <legend style="font-weight: bold; color: #1e4d4d; font-size: 16px;">Dirección</legend>

        <div style="display: flex; gap: 15px;">
            <div style="flex: 1;">
                <label>Provincia:</label>
                <input type="text" class="form-control" />
            </div>
            <div style="flex: 1;">
                <label>Cantón:</label>
                <input type="text" class="form-control" />
            </div>
        </div>

        <div style="display: flex; gap: 15px; margin-top: 15px;">
            <div style="flex: 1;">
                <label>Distrito:</label>
                <input type="text" class="form-control" />
            </div>
            <div style="flex: 1;">
                <label>Barrio:</label>
                <input type="text" class="form-control" />
            </div>
        </div>

        <div style="margin-top: 15px;">
            <label>Señas exactas:</label>
            <textarea class="form-control" rows="3" placeholder="Detalles adicionales de ubicación..."></textarea>
        </div>

        <div style="display: flex; gap: 15px; margin-top: 15px;">
            <div style="flex: 1;">
                <label>Latitud:</label>
                <input type="text" class="form-control" placeholder="Ej: 9.9821" />
            </div>
            <div style="flex: 1;">
                <label>Longitud:</label>
                <input type="text" class="form-control" placeholder="Ej: -84.0907" />
            </div>
        </div>
    </fieldset>

    <!-- Botones de acción -->
    <div style="display: flex; justify-content: center; gap: 20px; margin-top: 30px;">
        <button onclick="guardarCambios()" style="background-color: #2c7a3f; color: white; padding: 10px 20px; border: none; border-radius: 6px; font-weight: bold;">Guardar cambios</button>
        <a href="/EmpresaRecreacion/Menu" style="background-color: #b54a30; color: white; padding: 10px 20px; border-radius: 6px; text-decoration: none; font-weight: bold;">Cancelar</a>
    </div>
</div>

@section Scripts {
    <script>
        function guardarCambios() {
            alert("Cambios guardados exitosamente.");
            window.location.href = "/EmpresaRecreacion/Menu";
        }
    </script>
}
