@{
    ViewData["Title"] = "Registrar Tipo de Habitación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GestionHotelera.Models.VistasModel.RegistrarTipoDeHabitacionViewModel;


<div style="max-width: 800px; margin: auto; padding: 30px; background: white; border-radius: 12px; box-shadow: 0 0 15px rgba(0,0,0,0.1); font-family: 'Segoe UI', sans-serif;">
    <h2 style="text-align: center; color: #2c3e50; margin-bottom: 30px;">Registre Nuevo Tipo de Habitación</h2>

    <form id="registrarNuevoTipoHabitacion" enctype="multipart/form-data">
        <div style="margin-bottom: 20px;">
            <label><strong>Nombre del tipo de habitacion:</strong></label>
            <input type="text" name="NombreTipoHabitacion" placeholder="Ej: Suite Familiar" class="form-control" style="width: 100%; padding: 10px; margin-top: 5px;" />
        </div>

        <div style="margin-bottom: 20px;">
            <label><strong>Descripcion:</strong></label>
            <textarea class="form-control" name="Descripcion" rows="4" placeholder="Describa brevemente la habitación..." style="width: 100%; padding: 10px; margin-top: 5px;"></textarea>
        </div>

        <div style="margin-bottom: 20px;">
            <label><strong>Precio por noche:</strong></label>
            <input type="number" name="PrecioPorNoche" placeholder="Ej: 250" class="form-control" style="width: 50%; padding: 10px; margin-top: 5px;" />
        </div>

        <div style="margin-bottom: 20px;">
            <label><strong>Tipo de cama:</strong></label>
            @* <input type="text" placeholder="Ej: Cama King" class="form-control" style="width: 50%; padding: 10px; margin-top: 5px;" /> *@

            <select id="tipoCama" name="TipoCama" required>
                <option value="" disabled selected>Seleccione un tipo de cama</option>
                @foreach (var tipo in Model.ListaTiposDeCamas)
                {
                    <option value="@tipo.IdTipoCama">@tipo.NombreCama</option>
                }
            </select>
        </div>

        <div style="margin-bottom: 20px;">
            <label><strong>Imagenes:</strong></label><br />
            <input type="file" name="ImagenesTipoHabitacion" multiple accept="image/jpeg, image/png, image/jpg" class="form-control" style="margin-top: 5px;" />
        </div>

        <div style="margin-bottom: 30px;">
            <label><strong>Seleccione las comodidades de la habitacion:</strong></label>
            <div style="display: flex; flex-wrap: wrap; gap: 10px; margin-top: 10px;">
                @foreach (var comodidad in Model.ListaComodidades ) @*new[] { "WIFI", "Piscina", "A/C", "Parqueo", "TV", "Escritorio", "Caja fuerte", "Terraza", "TV LED" }*@
                {
                    <label style="background-color: #1abc9c; color: white; padding: 8px 14px; border-radius: 6px; cursor: pointer;">
                        <input type="checkbox" name="ListaComodidades" value="@comodidad.IdComodidad" style="margin-right: 5px;" /> @comodidad.NombreComodidad
                    </label>
                }
            </div>
        </div>

        <div style="display: flex; justify-content: center; gap: 20px;">
            <button type="submit" class="btn btn-success" style="padding: 10px 30px;">Guardar</button>
            <a href="/EmpresaHospedaje/Menu" class="btn btn-danger" style="padding: 10px 30px;">Cancelar</a>
        </div>
    </form>
</div>


<script src="~/js/RegistrarTipoHabitacionScript.js"></script>