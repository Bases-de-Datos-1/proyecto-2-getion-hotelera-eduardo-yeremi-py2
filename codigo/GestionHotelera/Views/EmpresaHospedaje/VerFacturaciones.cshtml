@{
    ViewData["Title"] = "Ver Facturaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .facturas-container {
            background-color: #444;
            color: white;
            max-width: 1000px;
            margin: auto;
            padding: 30px;
            border-radius: 12px;
        }

        h2 {
            text-align: center;
            font-size: 30px;
            margin-bottom: 20px;
        }

        .volver {
            background: none;
            border: none;
            color: white;
            font-size: 24px;
            margin-bottom: 20px;
            cursor: pointer;
        }

        .modo-btns button {
            background-color: #317264;
            color: white;
            margin: 10px 10px 20px 0;
            padding: 10px 15px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
        }

        .form-section {
            background-color: #666;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        input[type="text"], select {
            width: 100%;
            padding: 10px;
            margin-top: 8px;
            border-radius: 6px;
            border: none;
        }

        .filtros-fecha {
            margin-top: 20px;
        }

            .filtros-fecha button {
                margin: 10px 10px 0 0;
                padding: 8px 14px;
                border-radius: 5px;
                border: none;
                background-color: #2b5f2e;
                color: white;
                cursor: pointer;
            }

        .buscar-btn {
            display: block;
            margin: 30px auto 0 auto;
            background-color: #1c591c;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            cursor: pointer;
        }

        #resultados {
            background-color: #ccc;
            color: #111;
            padding: 20px;
            border-radius: 10px;
            margin-top: 25px;
        }
    </style>
}

<div class="facturas-container">
    <button class="volver" onclick="window.location.href='/EmpresaHospedaje/Menu'">← Atrás</button>
    <h2>Ver Facturas</h2>

    <div class="modo-btns">
        <button onclick="seleccionarModo('reserva')">Por reservación</button>
        <button onclick="seleccionarModo('tipo')">Por tipo de habitación</button>
        <button onclick="seleccionarModo('numero')">Por número de habitación</button>
    </div>

    <div class="form-section">
        <label id="inputLabel">Introduzca el ID de su reservación</label>
        <input type="text" id="busquedaInput" placeholder="Ej: 12345" />

        <div class="filtros-fecha">
            <label><strong>Filtro de fechas</strong></label><br />
            <button onclick="alert('Filtro día')">Por día</button>
            <button onclick="alert('Filtro mes')">Por mes</button>
            <button onclick="alert('Filtro año')">Por año</button>
            <button onclick="alert('Rango de fecha')">Rango de fecha</button>
        </div>
    </div>

    <button class="buscar-btn" onclick="buscarFacturas()">Buscar Facturas</button>

    <div id="resultados">
        Resultados…
    </div>
</div>

@section Scripts {
    <script>
        function seleccionarModo(modo) {
            const label = document.getElementById("inputLabel");
            const input = document.getElementById("busquedaInput");

            if (modo === "reserva") {
                label.innerText = "Introduzca el ID de su reservación";
                input.placeholder = "Ej: 12345";
            } else if (modo === "tipo") {
                label.innerText = "Introduzca el tipo de habitación";
                input.placeholder = "Ej: Suite Familiar";
            } else if (modo === "numero") {
                label.innerText = "Introduzca el número de su habitación";
                input.placeholder = "Ej: 102";
            }
        }

        function buscarFacturas() {
            const valor = document.getElementById("busquedaInput").value;
            document.getElementById("resultados").innerHTML = "🔎 Buscando facturas relacionadas con: <strong>" + valor + "</strong>...";
        }
    </script>
}
