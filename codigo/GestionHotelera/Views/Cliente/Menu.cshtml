@{
    ViewData["Title"] = "Explorar - Menú Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .menu-layout {
            display: flex;
            gap: 30px;
            margin: 40px 20px;
        }

        .sidebar {
            width: 300px;
            background-color: #f2f2f2;
            padding: 20px;
            border-radius: 10px;
        }

        .btn-type {
            display: block;
            width: 100%;
            margin: 5px 0;
            padding: 10px;
            border: 1px solid #333;
            border-radius: 8px;
            background-color: #fff;
            cursor: pointer;
        }

            .btn-type.active {
                background-color: #007bff;
                color: white;
            }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
                display: block;
                margin-bottom: 5px;
            }

            .form-group input,
            .form-group select {
                width: 100%;
                padding: 8px;
                border-radius: 6px;
                border: 1px solid #ccc;
            }

        .tag-list {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }

        .tag {
            padding: 6px 12px;
            background-color: #e0e0e0;
            border-radius: 20px;
            cursor: pointer;
        }

            .tag.active {
                background-color: #007bff;
                color: white;
            }

        .top-buttons {
            display: flex;
            justify-content: space-between;
            margin: 20px;
        }

            .top-buttons a {
                padding: 10px 15px;
                background-color: #007bff;
                color: white;
                border-radius: 6px;
                text-decoration: none;
            }

        .search-bar {
            display: flex;
            gap: 10px;
            margin: 0 20px 30px 20px;
        }

            .search-bar input {
                flex: 1;
                padding: 10px;
                border-radius: 6px;
                border: 1px solid #ccc;
            }

            .search-bar button {
                padding: 10px 15px;
                border: none;
                background-color: #343a40;
                color: white;
                border-radius: 6px;
            }

        .filter-section {
            display: none;
        }

            .filter-section.active {
                display: block;
            }
    </style>
}

<div class="top-buttons">
    <a href="/Home/Index">← Volver</a>
    <div>
        <a href="/Cliente/Perfil">Modificar perfil</a>
        <a href="/Cliente/Reservas">Ver reservaciones</a>
    </div>
</div>

<div class="search-bar">
    <input type="text" placeholder="Buscar..." />
    <button>🔍</button>
</div>

<div class="menu-layout">
    <div class="sidebar">
        <h4>Tipo:</h4>
        <button class="btn-type" data-target="hospedaje">Hospedaje</button>
        <button class="btn-type" data-target="empresaHospedaje">Empr. Hospedaje</button>
        <button class="btn-type" data-target="empresaRecreacion">Empr. Recreación</button>
        <button class="btn-type" data-target="servicios">Servicios</button>

        <hr />

        <!-- Filtros: Hospedaje -->
        <div id="filtros-hospedaje" class="filter-section">
            <div class="form-group">
                <label>Fecha de entrada:</label>
                <input type="date" name="FechaEntrada" />
            </div>
            <div class="form-group">
                <label>Fecha de salida:</label>
                <input type="date" name="FechaSalida" />
            </div>
            <div class="form-group">
                <label>Tipo de cama:</label>
                <button class="btn btn-outline-secondary w-100 mb-1">Cama Individual</button>
                <button class="btn btn-outline-secondary w-100 mb-1">Cama Grande</button>
                <button class="btn btn-outline-secondary w-100">Cama King zise</button>
            </div>
            <div class="form-group">
                <label>Rango de precio:</label>
                <input type="number" placeholder="Min ₡" />
                <input type="number" placeholder="Max ₡" />
            </div>
            <div class="form-group">
                <label>Ubicación:</label>
                <select><option>Provincia</option></select>
                <select><option>Cantón</option></select>
                <select><option>Distrito</option></select>
                <select><option>Barrio</option></select>
            </div>
            <div class="form-group">
                <label>Comodidades:</label>
                <div class="tag-list">
                    <span class="tag">WiFi</span>
                    <span class="tag">Piscina</span>
                    <span class="tag">A/C</span>
                    <span class="tag">Parqueo</span>
                    <span class="tag">Comida</span>
                </div>
            </div>
        </div>

        <!-- Filtros: Empresa Hospedaje -->
        <div id="filtros-empresaHospedaje" class="filter-section">
            <div class="form-group">
                <label>Ubicación:</label>
                <select><option>Provincia</option></select>
                <select><option>Cantón</option></select>
                <select><option>Distrito</option></select>
                <select><option>Barrio</option></select>
            </div>
            <div class="form-group">
                <label>Comodidades:</label>
                <div class="tag-list">
                    <span class="tag">WiFi</span>
                    <span class="tag">Piscina</span>
                    <span class="tag">Parqueo</span>
                    <span class="tag">Comida</span>
                </div>
            </div>
            <div class="form-group">
                <label>Referencia GPS:</label>
                <input type="text" placeholder="Coordenadas o ubicación" />
            </div>
            <div class="form-group">
                <label>Tipo de alojamiento:</label>
                <div class="tag-list">
                    <span class="tag">Hotel</span>
                    <span class="tag">Departamento</span>
                    <span class="tag">Hostal</span>
                    <span class="tag">Cuarto compartido</span>
                    <span class="tag">Casa</span>
                    <span class="tag">Cabaña</span>
                </div>
            </div>
        </div>

        <!-- Filtros: Empresa Recreación -->
        <div id="filtros-empresaRecreacion" class="filter-section">
            <div class="form-group">
                <label>Ubicación:</label>
                <select><option>Provincia</option></select>
                <select><option>Cantón</option></select>
                <select><option>Distrito</option></select>
                <select><option>Barrio</option></select>
            </div>
            <div class="form-group">
                <label>Actividades disponibles:</label>
                <div class="tag-list">
                    <span class="tag">Tour en bote</span>
                    <span class="tag">Tour en lancha</span>
                    <span class="tag">Tour en catamarán</span>
                    <span class="tag">Kayak</span>
                    <span class="tag">Transporte</span>
                </div>
            </div>
        </div>

        <!-- Filtros: Servicios -->
        <div id="filtros-servicios" class="filter-section">
            <div class="form-group">
                <label>Rango de precio:</label>
                <input type="number" placeholder="Min ₡" />
                <input type="number" placeholder="Max ₡" />
            </div>
            <div class="form-group">
                <label>Ubicación:</label>
                <select><option>Provincia</option></select>
                <select><option>Cantón</option></select>
                <select><option>Distrito</option></select>
                <select><option>Barrio</option></select>
            </div>
            <div class="form-group">
                <label>Actividades disponibles (placeholder):</label>
                <div class="tag-list">
                    <span class="tag">Senderismo</span>
                    <span class="tag">Turismo</span>
                    <span class="tag">Natación</span>
                    <span class="tag">Kayak</span>
                </div>
            </div>
        </div>
    </div>

    <div class="results">
        <p>← Seleccioná un tipo y aplicá filtros para ver resultados aquí.</p>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll(".btn-type").forEach(btn => {
            btn.addEventListener("click", () => {
                document.querySelectorAll(".btn-type").forEach(b => b.classList.remove("active"));
                btn.classList.add("active");

                document.querySelectorAll(".filter-section").forEach(s => s.classList.remove("active"));
                const target = btn.dataset.target;
                const filtro = document.getElementById("filtros-" + target);
                if (filtro) filtro.classList.add("active");
            });
        });

        document.querySelectorAll(".tag").forEach(tag => {
            tag.addEventListener("click", () => {
                tag.classList.toggle("active");
            });
        });
    </script>
}
