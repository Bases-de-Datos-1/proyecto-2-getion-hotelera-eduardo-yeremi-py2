@{
    ViewData["Title"] = "Modificar Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .form-container {
            max-width: 800px;
            margin: auto;
            padding: 30px;
            background-color: #f4f4f4;
            border-radius: 10px;
        }

        .btn-volver {
            background-color: #6c757d;
            color: white;
            padding: 8px 14px;
            border-radius: 6px;
            text-decoration: none;
            display: inline-block;
            margin-bottom: 20px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-row {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-group {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        input, select {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

        .password-toggle {
            position: relative;
        }

            .password-toggle input[type="password"] {
                width: 100%;
            }

        .guardar-btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 6px;
            font-size: 16px;
            display: block;
            margin: 30px auto 0;
        }
    </style>
}

<div class="form-container">
    <a class="btn-volver" href="/Cliente/Menu">← Volver al menú</a>
    <h2>Modificar Perfil</h2>

    <form method="post">
        <div class="form-row">
            <div class="form-group">
                <label>Nombre:</label>
                <input type="text" placeholder="Yeremi Calvo" name="nombre" />
            </div>
            <div class="form-group">
                <label>Fecha de nacimiento:</label>
                <input type="date" name="fechaNacimiento" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label>Email:</label>
                <input type="email" placeholder="ej: yecalvo@gmail.com" name="email" />
            </div>
            <div class="form-group">
                <label>Número de identificación:</label>
                <input type="text" placeholder="ej: 703190397" name="identificacion" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label>Tipo de identificación:</label>
                <select name="tipoIdentificacion">
                    <option>Cédula Nacional</option>
                    <option>DIMEX</option>
                    <option>Pasaporte</option>
                </select>
            </div>
            <div class="form-group">
                <label>Nacionalidad:</label>
                <select name="nacionalidad">
                    <option>Costarricense</option>
                    <option>Nicaragüense</option>
                    <option>Estadounidense</option>
                    <option>Otra</option>
                </select>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group password-toggle">
                <label>Contraseña:</label>
                <input type="password" name="password" placeholder="********" />
            </div>
            <div class="form-group">
                <label>Confirmar contraseña:</label>
                <input type="password" name="confirmPassword" placeholder="********" />
            </div>
        </div>

        <div class="form-group">
            <label>Anote 3 números telefónicos:</label>
            <input type="tel" name="telefono1" placeholder="I. ..." />
            <input type="tel" name="telefono2" placeholder="II. ..." style="margin-top: 5px;" />
            <input type="tel" name="telefono3" placeholder="III. ..." style="margin-top: 5px;" />
        </div>

        <button type="submit" class="guardar-btn">Guardar</button>
    </form>
</div>
